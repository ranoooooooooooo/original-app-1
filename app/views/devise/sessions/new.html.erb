<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ログイン</h2>
      
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <div class="field">
        <%= f.label :email, "Email" %><br />
        <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password	, "Password（6文字以上）" %><br />
        <%= f.password_field :password	, id:"user_password", autocomplete: "current-password" %>
      </div>

      <div class="form__submit">
        <%= f.submit "Log-In", class:'nav__btn' %>
      </div>
      <% end %>
    </div>
  </div>
</div>